# Environment Configuration
NODE_ENV=development                    # Set to 'development' for local, 'production' for Render
PORT=3000                              # Port for health check server

# Bot Configuration
BOT_NAME="Birthday Buddy"              # Name of your bot
ENABLE_AUTO_WISHES=true                # Enable/disable automatic birthday wishes
DEFAULT_WISH_TIME=00:00                # Time to send birthday wishes (24hr format)

# Storage Configuration
# Local: Use ./auth_info_baileys
# Render: Use /opt/render/project/src/auth_info_baileys
AUTH_FILE_PATH=./auth_info_baileys     # Will be auto-adjusted based on NODE_ENV

# Logging Configuration
LOG_LEVEL=info                         # debug, info, warn, error
ENABLE_FILE_LOGGING=true               # Enable logging to files

# API Keys (if using additional services)
REMOVE_BG_API_KEY=your_key_here        # For background removal in stickers

# Database Configuration
DB_PATH=./database                     # Path to local database directory

# Feature Flags
ENABLE_STICKER_CREATION=true           # Enable/disable sticker creation feature
ENABLE_AI_RESPONSES=true               # Enable/disable AI responses
